{
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "jsx": "react",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": "src/scripts",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipDefaultLibCheck": true,
  },
  "typeAcquisition": {
    "enable": true
  },
}